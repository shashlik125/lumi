4. –ù–∞—Å—Ç—Ä–æ–π—Ç–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ –ë–î –≤ app/__init__.py:
python
import os
from flask import Flask
from flask_sqlalchemy import SQLAlchemy
from flask_login import LoginManager

db = SQLAlchemy()
login_manager = LoginManager()

def create_app():
    app = Flask(__name__)
    
    # –°–µ–∫—Ä–µ—Ç–Ω—ã–π –∫–ª—é—á
    app.config['SECRET_KEY'] = '–≤–∞—à-—Å–µ–∫—Ä–µ—Ç–Ω—ã–π-–∫–ª—é—á-–∏–∑–º–µ–Ω—è–µ–º-–ø–æ–∑–∂–µ'
    
    # –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ë–î –¥–ª—è PythonAnywhere
    # –ú—ã –Ω–∞—Å—Ç—Ä–æ–∏–º —ç—Ç–æ –ü–û–°–õ–ï –¥–µ–ø–ª–æ—è
    app.config['SQLALCHEMY_DATABASE_URI'] = 'mysql+mysqlconnector://{username}:{password}@{hostname}/{database}'
    app.config['SQLALCHEMY_TRACK_MODIFICATIONS'] = False
    app.config['SQLALCHEMY_POOL_RECYCLE'] = 299
    
    # –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
    db.init_app(app)
    login_manager.init_app(app)
    login_manager.login_view = 'auth.login'
    
    # –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è blueprint
    from app.routes import main as main_blueprint
    from app.auth import auth as auth_blueprint
    
    app.register_blueprint(main_blueprint)
    app.register_blueprint(auth_blueprint)
    
    return app
